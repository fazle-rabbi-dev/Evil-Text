<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#FFEEEEEE">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="0dp"
		android:padding="10dp"
		android:weightSum="4"
		android:background="#FFE5E5E5">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginBottom="5dp"
			android:layout_weight="2"
			android:padding="10dp"
			android:background="@drawable/box_bg"
			android:gravity="center_vertical">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Enter Text"
					android:textSize="16sp"
					android:textColor="#FF0D1330"
					android:fontFamily="@font/hand"/>

				<EditText
					android:layout_width="match_parent"
					android:ems="100"
					android:layout_height="40dp"
					android:id="@+id/text"
					android:inputType="text"
					android:fontFamily="@font/opensans"
					android:backgroundTint="#FF131666"
					android:textColorHint="@color/colorPrimary"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Repetition Limit"
					android:textSize="16sp"
					android:textColor="#FF0D1330"
					android:fontFamily="@font/hand"
					android:backgroundTint="#FF131666"/>

				<EditText
					android:layout_width="match_parent"
					android:ems="10"
					android:layout_height="40dp"
					android:textColorHint="@color/white"
					android:id="@+id/limit"
					android:inputType="number"
					android:fontFamily="@font/opensans"
					android:backgroundTint="#FF131666"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<CheckBox
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="New Line"
					android:textColor="#FF101E33"
					android:id="@+id/newLine"
					android:fontFamily="@font/hand"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal">

				<Button
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:text="Reset"
					android:background="@drawable/btn"
					android:layout_marginRight="5dp"
					android:textColor="#FFFFFFFF"
					android:id="@+id/resetBtn"
					android:fontFamily="@font/opensans"
					android:textSize="12sp"
					android:textAllCaps="false"/>

				<Button
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:text="Generate"
					android:background="@drawable/btn"
					android:layout_marginLeft="5dp"
					android:textColor="#FFFFFFFF"
					android:id="@+id/generateBtn"
					android:fontFamily="@font/opensans"
					android:textSize="12sp"
					android:textAllCaps="false"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="5dp"
			android:layout_weight="2"
			android:padding="10dp"
			android:background="@drawable/box_bg">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right">

				<ImageView
					android:src="@drawable/copy"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_marginRight="10dp"
					android:id="@+id/copyText"/>

				<ImageView
					android:src="@drawable/share"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/shareText"/>

			</LinearLayout>

			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FF6D6B6B"
					android:id="@+id/displayText"
					android:fontFamily="@font/opensans"
					android:textSize="14sp"
					android:text="Repeated text will appear here ðŸ¥°"/>

			</ScrollView>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

